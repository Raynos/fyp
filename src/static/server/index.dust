<!DOCTYPE html>
<html>
    <head>
        <title>Related Feed Reader</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="/css/fyp.css" />
    </head>
    <body class="view1">
        <div id="linksin"></div>
        <div id="linksout"></div>
        <div id="title">
            <div id='login'>
                <input id='email' placeholder='email' />
                <input id='password' placeholder='password' />
                <button class='submit'>Login</button>
                <button id="view1">View 1</button>
                <button id="view2">View 2</button>
            </div>
            <div id="outer">
                <div>
                    Getting your data from google reader
                    <progress type="progress" id="greader"></progress>
                </div>
                <div>
                    Constructing links
                    <progress type="progress" id="linking"></progress>
                </div>
            </div>
        </div>
        <div>
            <div id="blog">
                <h1 id="blog-title">Loading posts from Google Reader</h1>
                <ol id="posts">
                    
                </ol>
            </div>
            <div id="content">
                <h1>Blog post content</h1>
                <div id="postcontent">
                </div>
            </div>
            <div id="related">
                <h1>Related links</h1>
                <ul id="relatedLinks">
                </ul>
            </div>
            <div id="links">
                <div id="backlinksContainer">
                    <h1>incoming related links</h1>
                    <ul id="backlinks">
                    </ul>
                </div>
                <div id="forwardLinksContainer">
                    <h1>outgoing related links</h1>
                    <ul id="forwardlinks">
                    </ul>
                </div>
            </div>
        </div>
        <script src="/js/bundle.js"></script>
    </body>
</html>